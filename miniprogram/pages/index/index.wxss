/**index.wxss**/
page {
  background: #ffffff;
  --text-color: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --price-color: #ff4d4f;
  --border-color: #eeeeee;
}

.container {
  min-height: 100vh;
  padding: 0;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 360rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}



/* 任务列表 */
.task-list {
  padding: 0;
}

.task-item {
  background: #ffffff;
  padding: 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.task-title {
  font-size: 30rpx;
  color: var(--text-color);
  margin-bottom: 16rpx;
}

.task-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.task-price {
  font-size: 32rpx;
  color: var(--price-color);
  font-weight: 500;
}

.task-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 2rpx;
}

.task-meta {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.task-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 加载更多 */
.loading {
  text-align: center;
  padding: 24rpx;
  color: var(--text-light);
  font-size: 24rpx;
}

.divider {
  text-align: center;
  padding: 24rpx;
  color: var(--text-light);
  font-size: 24rpx;
} 