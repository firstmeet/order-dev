/* components/tab-bar/tab-bar.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  z-index: 99;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.tab-icon {
  font-size: 40rpx;
  line-height: 1;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #666666;
}

.tab-item.active .tab-text {
  color: #3d7eff;
} 